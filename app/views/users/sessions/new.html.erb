<h2 class="text-center">Welcome</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <div class="mb-3" style="margin-top: -16px">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class:"fs-8" %>
    </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?  %>
  </div>
  <div class="form-actions d-grid my-3">
    <%= f.button :submit, "Login", class: "btn-gradient" %>
  </div>
<% end %>
<div class="d-grid">
  <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-secondary btn-sm" %>
</div>
